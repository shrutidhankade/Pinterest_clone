<%-include("header")%>
    <link rel="stylesheet" href="/stylesheets//signup.css">
    <div class="container">
        <div class="content">
            <!--pinterest logo-->
            <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo"
                class="img1" />
            <p class="header">create account</p>
            <% if(error.length> 0){%>
                <p class="error">
                    <%=error%>
                </p>
                <%}%>

            <form action="/signup" method="post">
                <input type="username" name="username" placeholder="username" class="detail" />
                <input type="email" name="email" placeholder="Email" class="detail" /><br />
                <input type="password" name="password" placeholder="Password" class="detail" />
                <button class="btn int">Register Account</button>
            </form>
            <p class="or">OR</p>
            <button class="btn fbk">
                <i class="fab fa-facebook fa-lg" style="color: white; padding-right: 10px"></i><a href="#">Continue with
                    Facebook</a></button><br />
            <button class="btn ggl">
                <i class="fab fa-google" style="color: rgb(11, 241, 22); padding-right: 10px"></i><a href="#">Continue
                    with Google</a>
            </button>
<footer>
            <br><br>
            <p>allreay on Pinterest ?<a href="/signin">login</a></p>
            </footer>
        </div>
    </div>











    <%-include("footer")%>